<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hammer.sitorwalk.AboutFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sit or Walk"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version: 1.00 Beta"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Hammer"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This application is for COMP5047 Prevasive Computing Project. A wio board sensor is required to count the sit duration."
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CopyRight Â© 2017 Team Hammer. All rights reserved"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="45dp" />

</LinearLayout>
