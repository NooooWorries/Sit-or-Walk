<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hammer.sitorwalk.StepCounter.PedometerFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="100sp"
        android:paddingTop="30dp"
        android:id="@+id/textPedo"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Your daily target: 0"
        android:textAlignment="center"
        android:textSize="18dp"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btnHistory"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="View History Diagram For Last Week"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnHistoryAll"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="View Full History"
        />

</LinearLayout>
